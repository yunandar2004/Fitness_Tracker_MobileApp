<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>



    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Fitness Tracker App"
        android:theme="@style/Theme.FitnessTracker"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".fitness.app.LoginActivity"
            android:exported="true"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".fitness.app.MainActivity"
            android:exported="false" />
        <activity
            android:name=".fitness.app.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".fitness.app.AdminActivity"
            android:exported="false" />

    </application>
</manifest>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- User Weight -->
        <EditText
            android:id="@+id/etUserWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Weight (kg)"
            android:inputType="numberDecimal" />

        <!-- Duration -->
        <EditText
            android:id="@+id/etDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duration (minutes)"
            android:inputType="number" />

        <!-- Activity Spinner -->
        <Spinner
            android:id="@+id/spinnerActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Running Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRunning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">
                <EditText
                    android:id="@+id/etPace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pace (min/km)"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Cycling Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCycling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">
                <EditText
                    android:id="@+id/etSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Speed (km/h)"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Walking Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWalking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">
                <EditText
                    android:id="@+id/etWalkSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Speed (km/h)"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Weightlifting Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWeights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <EditText
                    android:id="@+id/etSets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sets"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/etReps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Reps"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/etLiftingWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Weight (kg)"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Intensity Spinner (Weightlifting/Yoga/HIIT) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">
                <TextView
                    android:id="@+id/tvIntensityLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Intensity" />
                <Spinner
                    android:id="@+id/spinnerIntensity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Swimming Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSwimStroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stroke Type" />
                <Spinner
                    android:id="@+id/spinnerStroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnSaveWorkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Workout"
            android:layout_marginTop="8dp"/>

        <!-- Result -->
        <TextView
            android:id="@+id/tvCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calories: 0"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>
</ScrollView>
